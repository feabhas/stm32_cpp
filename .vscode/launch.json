{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "arm-gdb-qemu",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/Application.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "Debug (GDB) QEMU Leds",
            "linux": {
                "miDebuggerPath": "${env:HOME}/gcc-arm-none-eabi-9-2020-q2-update/bin/arm-none-eabi-gdb",
                "debugServerPath": "${env:HOME}/gcc-arm-none-eabi-9-2020-q2-update/bin/arm-none-eabi-gdb",
            },
            "osx": {
                "miDebuggerPath": "/usr/local/bin/arm-none-eabi-gdb",
                "debugServerPath": "/usr/local/bin/arm-none-eabi-gdb",
            },
        }
    ]
}